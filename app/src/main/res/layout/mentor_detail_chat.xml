<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.buboslabwork.mycorz.MentorDetailChat">
    <!-- toolbar -->
    <RelativeLayout
        android:id="@+id/titleBarMentorDetaiChat"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/colorGreenNormal"
        android:layout_alignParentTop="true">
        <ImageButton
            android:id="@+id/btnBackMentorDetailChat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/button_back_header"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="22sp"
            android:text="Mentor Detail"/>
    </RelativeLayout>
    <!-- end toolbar -->

    <!-- footer -->
    <LinearLayout
        android:id="@+id/footerMentorDetailChat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="#555555"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/mentorDetailChatData"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_menu_certificate"
                android:background="@null"/>
            <ImageButton
                android:id="@+id/mentorDetailChatClass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_menu_available_class"
                android:background="@null"/>
            <ImageButton
                android:id="@+id/mentorDetailChatTesti"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_menu_testimonials"
                android:background="@null"/>
            <ImageButton
                android:id="@+id/mentorDetailChatChat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_menu_chat"
                android:background="@color/colorGreenOld"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
