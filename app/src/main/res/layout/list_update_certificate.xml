<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:padding="10dp"
        android:layout_below="@+id/titleBarAddCert"
        android:background="@drawable/rounded_green_background_stroke_normal"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_category_small"/>
            <EditText
                android:id="@+id/updateSkillCategory"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextGreyNormal"
                android:textColorHint="@color/colorTextGreyItalic"
                android:textSize="17sp"
                android:hint="Skill Category"
                android:background="@drawable/edittext_underlined"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_class_name"/>
            <EditText
                android:id="@+id/updateCertName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#3f3f40"
                android:textColorHint="#3f3f40"
                android:textSize="17sp"
                android:focusableInTouchMode="true"
                android:hint="Certificates"
                android:background="@drawable/edittext_underlined"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_class_name"/>
            <EditText
                android:id="@+id/updateCertYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#3f3f40"
                android:textColorHint="#3f3f40"
                android:textSize="17sp"
                android:focusableInTouchMode="true"
                android:hint="Year of Certificates"
                android:background="@drawable/edittext_underlined"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>