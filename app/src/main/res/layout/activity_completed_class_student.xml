<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_completed_request"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/accept_bg"
    tools:context="com.buboslabwork.mycorz.CompletedClassStudent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="27sp"
            android:text="Congratulation"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="15sp"
            android:text="What do you think about your mentor?"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/studentCompleteMentorImage"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            app:civ_border_color="#ffffff"
            app:civ_border_width="3dp"
            android:src="@drawable/jokowi"/>
        <TextView
            android:id="@+id/studentCompleteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="27sp"
            android:text="Budi Raharjo"/>
        <RatingBar
            android:id="@+id/studentCompleteRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center|center_vertical"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="0.0" />
        <EditText
            android:id="@+id/studentCompleteFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingBottom="5dp"
            android:hint="Feedback"
            android:textStyle="italic"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/edittext_underlined_oldgreen"/>
        <ImageButton
            android:id="@+id/btnStudentComplete"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_submit_white"/>
        <TextView
            android:id="@+id/studentCompleteComplaint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="Complaint"/>
    </LinearLayout>
</RelativeLayout>
